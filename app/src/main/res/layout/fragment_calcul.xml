<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/champs"
    tools:context=".Calcul">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="80sp"
                android:textStyle="bold"
                android:text="@string/textCalcul"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorRouge"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.75"
                android:onClick="pageAjout"
                android:text="@string/textAjout"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.75"
                android:onClick="pageConversion"
                android:text="@string/textConversion"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.75"
                android:onClick="pageSulfitage"
                android:text="@string/textSulfitage"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:ignore="OnClick" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>